                <div type="NiyayeshStanza" xml:id="NyMah4.7" corresp="#GNy3.12">
                    <ab n="a" xml:id="NyMah4.7a">aɱāi. raēšca. xᵛarənasca. aɱāi. tanuuō. druuatātəm.</ab>
                    <ab n="b" xml:id="NyMah4.7b">aɱāi. tanuuō. vazduuarə. aɱāi. tanuuō. vərəϑrəm.</ab>
                    <ab n="c" xml:id="NyMah4.7c">aɱāi. īštīm. pouruš.xᵛāϑrąm.</ab>
                    <ab n="d" xml:id="NyMah4.7d">aɱāi. āsnąmcit̰. frazaṇtīm. aɱāi. darəγąm. darəγō.jītīm. aɱāi. vahištəm. ahūm. aṣ̌aōnąm. raōcaŋhəm. vīspō.xᵛāϑrəm.</ab>
				</div>			
                <div type="NiyayeshStanza" xml:id="NyMah4.8" corresp="#GNy3.12">
                    <include href="/db/apps/cab_db/cab_rituals/blocks/prayers/AV" xpointer="AV"/>
                </div>
                <div type="NiyayeshStanza" xml:id="NyMah4.9" corresp="#GNy3.12">
                    <ab n="a" xml:id="NyMah4.9a">hazaŋhrəm. baēšazanąm. baēuuarə. baēšazanąm.</ab>
                    <ab n="b" xml:id="NyMah4.9b">hazaŋhrəm. baēšazanąm. baēuuarə. baēšazanąm.</ab>
